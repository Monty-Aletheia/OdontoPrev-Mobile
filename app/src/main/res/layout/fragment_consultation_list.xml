<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <View
        android:id="@+id/viewExample"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/border_radius"
        android:backgroundTint="@color/gray"
        android:ems="10"
        android:padding="6dp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Vai virar recycler"
        android:textColor="@color/light_blue"
        app:layout_constraintBottom_toTopOf="@+id/viewExample"
        app:layout_constraintStart_toStartOf="@+id/viewExample"
        app:layout_constraintEnd_toEndOf="@id/viewExample"/>

    <View
        android:id="@+id/viewExample2"
