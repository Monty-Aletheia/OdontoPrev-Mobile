        />

    <TextView
        android:id="@+id/textExample2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Vai virar recycler"
        android:textColor="@color/light_blue"
        app:layout_constraintBottom_toTopOf="@+id/viewExample2"
        app:layout_constraintStart_toStartOf="@+id/viewExample2"
        app:layout_constraintEnd_toEndOf="@id/viewExample2"/>

    <View
        android:id="@+id/viewExample3"
        android:layout_width="0dp"
